<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/navigation_graph"
        app:startDestination="@id/homeFragment">

    <fragment
            android:id="@+id/homeFragment"
            android:name="fr.leothosthoren.stopwilddump.ui.home.HomeFragment"
            android:label="@string/app_name"
            tools:layout="@layout/fragment_home">
        <action
                android:id="@+id/action_homeFragment_to_destination_map"
                app:destination="@id/destination_global_map" />
        <action
                android:id="@+id/action_homeFragment_to_info_graph"
                app:destination="@id/info_graph"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
            android:id="@+id/destination_global_map"
            android:name="fr.leothosthoren.stopwilddump.ui.map.WildDumpMapFragment"
            android:label="@string/wild_dumps"
            tools:layout="@layout/fragment_wild_dump_map">
        <action
                android:id="@+id/action_destination_map_to_destination_detail"
                app:destination="@id/destination_detail"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
            android:id="@+id/destination_wild_dump_list"
            android:name="fr.leothosthoren.stopwilddump.ui.wildumplist.WildDumpListFragment"
            android:label="@string/wild_dumps"
            tools:layout="@layout/fragment_wild_dump_list">
        <action
                android:id="@+id/action_destination_wild_dump_list_to_detail_list_fragment"
                app:destination="@id/destination_detail">
            <argument
                    android:name="WildDumpPosition"
                    android:defaultValue="1"
                    app:argType="integer" />
        </action>
    </fragment>

    <fragment
            android:id="@+id/destination_detail"
            android:name="fr.leothosthoren.stopwilddump.ui.details.WildDumpDetailFragment"
            android:label="Detail"
            tools:layout="@layout/fragment_wild_dump_detail">
        <argument
                android:name="WildDumpPosition"
                android:defaultValue="0"
                app:argType="integer" />
    </fragment>

    <include app:graph="@navigation/info_graph" />

</navigation>