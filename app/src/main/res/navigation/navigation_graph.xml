<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/navigation_graph" app:startDestination="@id/homeFragment">

    <fragment android:id="@+id/homeFragment" android:name="fr.leothosthoren.stopwilddump.ui.home.HomeFragment"
              android:label="Home" tools:layout="@layout/fragment_home">
        <action android:id="@+id/action_homeFragment_to_destination_map" app:destination="@id/destination_global_map"
        />
        <action android:id="@+id/action_homeFragment_to_contributorsFragment"
                app:destination="@+id/destination_contributors"/>
        <action android:id="@+id/action_homeFragment_to_infoFragment" app:destination="@id/destination_infos"/>
        <action android:id="@+id/action_homeFragment_to_newsFragment" app:destination="@id/destination_news"/>
        <action android:id="@+id/action_homeFragment_to_profilFragment" app:destination="@id/destination_profile"/>
    </fragment>

    <fragment android:id="@+id/destination_global_map"
              android:name="fr.leothosthoren.stopwilddump.ui.map.WildDumpMapFragment"
              android:label="Map" tools:layout="@layout/fragment_wild_dump_map">
        <action android:id="@+id/action_destination_map_to_destination_detail"
                app:destination="@id/destination_detail"
                app:exitAnim="@anim/nav_default_exit_anim" app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>

    <fragment android:id="@+id/destination_wild_dump_list"
              android:name="fr.leothosthoren.stopwilddump.ui.wildumplist.WildDumpListFragment"
              android:label="List" tools:layout="@layout/fragment_wild_dump_list">
        <action android:id="@+id/action_destination_wild_dump_list_to_detail_list_fragment"
                app:destination="@id/destination_detail"/>
    </fragment>

    <fragment android:id="@+id/destination_detail"
              android:name="fr.leothosthoren.stopwilddump.ui.details.WildDumpDetailFragment"
              android:label="Detail" tools:layout="@layout/fragment_wild_dump_detail"/>
    <fragment android:id="@+id/destination_contributors"
              android:name="fr.leothosthoren.stopwilddump.ui.infos.ContributorsFragment"
              android:label="fragment_contributors" tools:layout="@layout/fragment_contributors"/>
    <fragment android:id="@+id/destination_infos" android:name="fr.leothosthoren.stopwilddump.ui.infos.InfoFragment"
              android:label="fragment_info" tools:layout="@layout/fragment_info"/>
    <fragment android:id="@+id/destination_news" android:name="fr.leothosthoren.stopwilddump.ui.infos.NewsFragment"
              android:label="fragment_news" tools:layout="@layout/fragment_news"/>
    <fragment android:id="@+id/destination_profile"
              android:name="fr.leothosthoren.stopwilddump.ui.infos.ProfileFragment"
              android:label="fragment_profil" tools:layout="@layout/fragment_profil"/>
</navigation>