<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            tools:text="Title"
            android:layout_width="283dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_height="wrap_content" android:id="@+id/itemTitle"
            android:textAppearance="@style/AppText.Text"
            app:layout_constraintStart_toEndOf="@+id/item_Image"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/item_Image"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/item_icon" android:layout_marginTop="8dp"/>

    <TextView
            tools:text="Description"
            android:layout_width="283dp"
            android:maxLines="1"
            android:textAppearance="@style/AppText"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:id="@+id/item_Description"
            app:layout_constraintStart_toEndOf="@+id/item_Image"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/item_Image" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/item_icon" app:layout_constraintTop_toBottomOf="@+id/itemTitle"/>

    <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp" tools:src="@color/colorLightGrey"
            android:id="@+id/item_Image"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="56dp" app:srcCompat="@drawable/ic_dump_trash"
            android:id="@+id/item_icon"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>