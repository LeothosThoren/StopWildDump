<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <Button
            android:text="@string/standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/standardType" android:layout_weight="1"/>

    <Button
            android:text="@string/terrain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/terrainType" android:layout_weight="1"/>

    <Button
            android:text="@string/hybrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/hybridType" android:layout_weight="1"/>

    <Button
            android:text="@string/satellite"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/satelliteType" android:layout_weight="1"/>
</LinearLayout>